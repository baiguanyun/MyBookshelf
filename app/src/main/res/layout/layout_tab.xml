<?xml version="1.0" encoding="utf-8"?>
<com.kunfei.bookshelf.view.web.TabCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ucTabCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPagePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/rlPageHead"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/ivWebsiteIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_bottom_home" />

        <TextView
            android:id="@+id/tvPagerUC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivPageClose"
            android:layout_toRightOf="@id/ivWebsiteIcon"
            android:singleLine="true"
            android:text="UC"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/ivPageClose"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="14dp"
            app:srcCompat="@drawable/ic_sc_delete_black" />
    </RelativeLayout>
</com.kunfei.bookshelf.view.web.TabCard>